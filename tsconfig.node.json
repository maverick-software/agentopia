{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "types": ["node", "dots-wrapper"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "vite.config.ts", 
    "src/services/**/*.ts", 
    "src/lib/**/*.ts", 
    "supabase/functions/**/*.ts", // If we have Supabase functions in TS
    "src/types/database.types.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
